@model IEnumerable<CookbookPI.Models.Entities.Users>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfRegistration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Permission)
            </th>
            <th>
                Zablokowany?
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nickname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRegistration)
                </td>
                <td>
                    @switch (item.User_Permission.ID_Permission)
                    {
                        case 1:
                            <text>Użytkownik</text>
                            break;
                        case 2:
                            <text>Moderator</text>
                            break;
                        case 3:
                            <text>Administrator</text>
                            break;
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isBanned)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID_User">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID_User">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

