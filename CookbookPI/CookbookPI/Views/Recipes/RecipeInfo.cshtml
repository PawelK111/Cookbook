@model CookbookPI.Models.RecipeInfo

@{
    ViewData["Title"] = "Details";
}
<div class="form-recipe" id="Recipe-Form" style="background-color:#c0f8fe; padding-left: 20px; border-radius:20px">
    <h1 class="text-center badgeIndex badgeTitle">@Html.DisplayFor(model => model.Recipe.Title)</h1>
    <hr />

    <h5 class="text-center" style="font-size: 25px; padding:10px;"><i class="fas fa-user"> Autor: @Html.DisplayFor(model => model.Author)</i></h5>
    <hr />
    <dl class="row" style="border-color:aqua">
        <dd class="col-lg-7">
            <div class="text-center">
                <i class="fas fa-bacon" aria-hidden="true" style="text-align:center; font-size: 20px;"> Opis przepisu:</i><br /> <br />
            </div>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            <br />
            <div class="text-center"><i class="fas fa-bacon " aria-hidden="true" style="font-size: 20px;"> Sposób przygotowania:</i><br /> <br /></div>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam eu enim elementum, imperdiet magna a, sodales elit. Maecenas tincidunt lacinia erat, aliquam gravida lorem dignissim ac. Praesent fermentum tincidunt neque, in blandit massa facilisis in. Proin id nisl ut eros cursus posuere ac eget ipsum. Nullam ultrices urna quis nunc condimentum, in sodales ex rutrum. Nullam lorem nisi, pulvinar id lorem in, dictum commodo enim. Duis efficitur, nisl eu sagittis pharetra, felis dolor hendrerit augue, eget convallis est ligula eu dui. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas.</p>
        </dd>
        <dd class="col-sm-4">
            <div class="photoimg">
                @if (Model.Recipe.Photo == null)
                {
                    <p class="fa fa-camera-retro"> Brak zdjęcia</p>
                }
            </div>
            <h5><i class="fas fa-info-circle"> Informacje:</i></h5>
            <i class="fas fa-utensils" aria-hidden="true"></i> Porcje:  @Html.DisplayFor(model => model.NumberOfPeople)
            <i class="far fa-clock" aria-hidden="true"></i> @Html.DisplayFor(model => model.TimeOfPrepare)
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-bar-chart-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                @if (Model.Recipe.ID_Difficulty == 1)
                {
                    <rect width="4" height="5" x="1" y="10" rx="1" />
                    if (Model.Recipe.ID_Difficulty == 2)
                    {
                        <rect width="4" height="9" x="6" y="6" rx="1" />
                        if (Model.Recipe.ID_Difficulty == 3)
                        {
                            <rect width="4" height="14" x="11" y="1" rx="1" />
                        }
                    }
                }
            </svg>@Html.DisplayFor(model => model.Difficulty)

            <hr />

            <h5><i class="fas fa-carrot"> Składniki:</i></h5>
            <hr />
            @foreach (var item in Model.Components)
            {
                <text>- </text>@Html.DisplayFor(modelItem => item.NameOfComponent)<text>: </text>
                @Html.DisplayFor(modelItem => item.Amount)<text> </text> @Html.DisplayFor(modelItem => item.Unit)
                <text><br /></text>
            }
        </dd>
        <dd class="col-sm-7" style="padding-left: 20px;">

        </dd>

    </dl>

</div>
@if (Context.Session.GetInt32("ID_USER") != null)
{
<div style="background-color: #c0f8fe; padding: 20px; border-radius:20px">
 
    <form asp-action="AddToFavorite">
        <button class="btn btn-outline-danger fa fa-file-pdf" id="saveToPDF" style="font-size: 25px;"> Pobierz</button> | <button class="btn btn-outline-success fa fa-star" style="font-size: 25px;" > Dodaj do ulubionych</button>
    </form>
    @if (Context.Session.GetInt32("Permission") == 3)
    {
        <div class="card-body col-3">
            <label class="badge badge-info" style="font-size:15px;">Opcje administratora:</label>
            <select class="form-control">
                <option value="1">Usuń przepis</option>
                <option value="2">Edytuj przepis</option>
                @if (Model.Recipe.IsAccepted == false)
                {
                    <option value="3">Zaakceptuj przepis</option>
                }
            </select>
            <br />
            <button class="btn btn-success">Wykonaj!</button>
        </div>
    }
</div>
}
