
<!DOCTYPE html>

<html lang="pl">

<head>
    <meta charset="utf-8" name="viewport" content="width=device-width" />
    <title>Przepisy-Kulinarne.pl</title>
    <meta name="description" content="Serwis poświęcony przepisom kulinarnym z całego świata!" />
    <meta name="keywords" content="przepis, kuchnia, polska, włoska, chińska, jedzenie, gotowanie" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Content-type" content="text/html; charset=UTF-8" />

    <script src="~/lib/bootstrap/site/docs/4.4/assets/js/vendor/jquery.slim.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/style.min.css" type="text/css" />

</head>
<body>
    <div class="wrapper">
        <!--PASEK NAWIGACYJNY-->

        <nav class="navbar navbar-expand-md navbar-dark bg-info">
            <a class="navbar-brand" href="#">PRZEPISY-KULINARNE.PL</a>
        </nav>
        <nav class="navbar navbar-expand-md fixed-top navbar-dark bg-info">
            <a class="navbar-brand" href="#">PRZEPISY-KULINARNE.PL</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTop" aria-controls="navbarTop" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTop">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Recipes">Przepisy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-toggle="modal" data-target="#SearchRecipesWin">Wyszukaj przepisu</a>
                    </li>
                    <!--
                    -->
                </ul>
                <ul class="navbar-nav">
                    @if (Context.Session.GetString("nickname") == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="SignIn" asp-controller="Account">Zaloguj się</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="SignUp" asp-controller="Account">Zarejestruj</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Profile" asp-controller="Account">Witaj, @Context.Session.GetString("nickname")</a>
                        </li>
                        @if (Context.Session.GetInt32("Permission") == 3)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="AdminPanel" asp-controller="Admin">Panel Administratora</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-action="AddRecipe" asp-controller="Recipes">Dodaj przepis</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Logout" asp-controller="Account">Wyloguj się</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        <!--KONIEC PASKA NAWIGACYJNEGO-->
        <div class="card maincontent">

            <div class="card">@RenderBody()</div>
            <!--<div class="d-flex flex-column">
                <div class="p-2">Dzisiaj jest: 4 stycznia 2020 roku</div>
                <div class="p-2">Przepis dnia</div>
                <div class="p-2">Przepis tygodnia</div>
            </div>
            -->

        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--KONIEC OKIEN DIALOGOWYCH-->
    <!--STOPKA-->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - <a asp-controller="Home" asp-action="Index">Przepisy-kulinarne.pl </a>Copyright by Paweł Kulewicz
        </div>
    </footer>
    <!--KONIEC STOPKI-->
</body>
</html>
