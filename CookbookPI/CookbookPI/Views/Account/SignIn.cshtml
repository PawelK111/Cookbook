@model CookbookPI.Models.SignIn

@{
    ViewData["Title"] = "SignIn";
}

@if (Context.Session.GetString("nickname") != null)
{
        <div class="alert alert-success">
            <strong>Obecnie jesteś zalogowany!</strong><br />
            Kliknij <a asp-action="Index" asp-controller="Home">tutaj</a>, aby powrócić do strony głównej!
        </div>
    }
    else
    {
        <h1>Zaloguj się</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="SignIn" asp-controller="Account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nickname" class="control-label"></label>
                        <input asp-for="Nickname" class="form-control" />
                        <span asp-validation-for="Nickname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Passwrd" class="control-label"></label>
                        <input asp-for="Passwrd" class="form-control" />
                        <span asp-validation-for="Passwrd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Zaloguj się" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    }
